#!/bin/bash
. .virtualenv/bin/activate

echo 'running all tests'
mkdir -p .gen
rm -rf .gen/src
cp -r src .gen/
chmod -R a-x+X .gen/src/python
for file in $(find .gen -name ".__init__.py")
do
    echo mv $file `echo $file | sed s/\\\\.__init__/__init__/` | sh
done
nosetests --with-progressive .gen/src/python
